<div class="row">
    <div class="col-xs-12 col-md-6">
        <div class="panel panel-default">
            <div class="panel-body">
                <form method="post" action="/userLogin/register">
                    <div class="sub-title">Name</div>
                    <div>
                        <input type="text" name="username" class="form-control" required="required">
                    </div>
                    <div class="sub-title">Email</div>
                    <div>
                        <input type="email" name="email" class="form-control" required="required">
                    </div>
                    <div class="sub-title">Password</div>
                    <div>
                        <input type="password" name="password" class="form-control" required="required">
                    </div>
                    <div class="sub-title">Confirm Password</div>
                    <div>
                        <input type="password" name="confirmPassword" class="form-control" required="required">
                    </div>

                    <button type="submit"> Register</button>
                </form>
            </div>
        </div>
    </div>
</div>


{{#if success}}
    <div class="alert alert-success alert-with-icon" data-notify="container">
        <button type="button" aria-hidden="true" class="close">×</button>
        <span data-notify="icon" class="fa fa-check"></span>
        <span data-notify="message">{{msg}}</span>
    </div>
{{else}}
    {{#each errors}}
    <div class="alert alert-danger alert-with-icon" data-notify="container">
        <button type="button" aria-hidden="true" class="close">×</button>
        <span data-notify="icon" class="fa fa-check"></span>
        <span data-notify="message">{{this.msg}}</span>
    </div>
    {{/each}}
{{/if}}